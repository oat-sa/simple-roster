{
    "name": "oat-sa/simple-roster",
    "description": "REST back-end service that handles authentication and eligibilities",
    "type": "project",
    "license": "GPL-2.0",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:oat-sa/phing-tasks.git"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-simplexml": "*",
        "aws/aws-sdk-php": "^3.81",
        "aws/aws-sdk-php-symfony": "^2.0",
        "doctrine/annotations": "^1.6",
        "league/csv": "^9.0",
        "nelmio/cors-bundle": "^1.5",
        "nesbot/carbon": "^2.11",
        "oat-sa/phing-tasks": "^0.3",
        "phing/phing": "^2.16",
        "ramsey/uuid": "^3.8",
        "sensio/framework-extra-bundle": "^5.2",
        "symfony/apache-pack": "^1.0",
        "symfony/browser-kit": "^4.0",
        "symfony/console": "^4.0",
        "symfony/dotenv": "^4.2",
        "symfony/flex": "^1.1",
        "symfony/form": "^4.0",
        "symfony/framework-bundle": "^4.0",
        "symfony/monolog-bundle": "^3.0",
        "symfony/orm-pack": "^1.0",
        "symfony/property-access": "^4.0",
        "symfony/property-info": "^4.0",
        "symfony/proxy-manager-bridge": "^4.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer": "^4.0",
        "symfony/stopwatch": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/yaml": "^4.0"
    },
    "require-dev": {
        "ext-intl": "*",
        "doctrine/doctrine-fixtures-bundle": "^3.1",
        "hautelook/alice-bundle": "^2.3",
        "infection/infection": "^0.13",
        "phpstan/phpstan": "^0.11",
        "phpstan/phpstan-doctrine": "^0.11",
        "phpstan/phpstan-phpunit": "^0.11",
        "phpstan/phpstan-symfony": "^0.11",
        "phpunit/phpunit": "<8.3",
        "symfony/debug-bundle": "^4.0",
        "symfony/phpunit-bridge": "^4.3",
        "symfony/profiler-pack": "^1.0",
        "symfony/var-dumper": "^4.0",
        "symfony/web-server-bundle": "^4.0"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.0"
        }
    }
}
