{
    "source": {
        "directories": [
            "src"
        ],
        "excludes": [
            "Kernel.php"
        ]
    },
    "timeout": 1000,
    "logs": {
        "text": "var/log/infection/infection.log",
        "perMutator": "var/log/infection/per-mutator.md"
    },
    "mutators": {
        "@default": true,
        "MethodCallRemoval": {
            "ignore": [
                "Symfony\\Component\\Console\\Helper\\ProgressBar",
                "OAT\\SimpleRoster\\Repository\\LtiInstanceRepository::flush",
                "Symfony\\Component\\Console\\Style\\SymfonyStyle::newLine"
            ]
        },
        "LogicalNot": {
            "ignoreSourceCodeByRegex": [
                "\\!$this->isDryRun*"
            ]
        }
    },
    "phpUnit": {
        "customPath": "bin/phpunit"
    },
    "tmpDir": "var/cache/infection"
}
